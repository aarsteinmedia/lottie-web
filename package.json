{
  "name": "@aarsteinmedia/lottie-web",
  "version": "1.3.0",
  "description": "Play animations generated in After Effects in the browser",
  "type": "module",
  "exports": {
    ".": {
      "default": "./dist/lottie.js",
      "types": "./dist/lottie.d.ts"
    },
    "./light": {
      "default": "./dist/lottie-light.js",
      "types": "./dist/lottie-light.d.ts"
    },
    "./svg": {
      "default": "./dist/lottie-svg.js",
      "types": "./dist/lottie-svg.d.ts"
    },
    "./canvas": {
      "default": "./dist/lottie-canvas.js",
      "types": "./dist/lottie-canvas.d.ts"
    },
    "./utils": {
      "default": "./dist/lottie-utils.js",
      "types": "./dist/lottie-utils.d.ts"
    },
    "./dotlottie": {
      "default": "./dist/dotlottie.js",
      "types": "./dist/dotlottie.d.ts"
    }
  },
  "main": "./dist/lottie.js",
  "types": "./dist/lottie.d.ts",
  "homepage": "https://www.aarstein.media/en/dotlottie-player",
  "repository": {
    "url": "git+https://github.com/aarsteinmedia/lottie-web.git",
    "type": "git"
  },
  "bugs": "https://github.com/aarsteinmedia/lottie-web/issues",
  "author": {
    "name": "Johan Martin Aarstein",
    "email": "johan@aarstein.media",
    "url": "https://www.aarstein.media",
    "organization": "Aarstein Media"
  },
  "license": "GPL-2.0-or-later",
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "rollup -c --configPlugin typescript",
    "prebuild:types": "rimraf ./types ",
    "build:types": "tsc -p tsconfig.build.json && tsc-alias",
    "prod": "pnpm build:types && pnpm build",
    "dev": "rollup -cw --configPlugin typescript --environment NODE_ENV:development",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@swc/core": "^1.15.11",
    "@types/node": "^25.3.0",
    "eslint": "^9.39.3",
    "eslint-config-sheriff": "^31.1.0",
    "eslint-plugin-perfectionist": "^5.6.0",
    "fflate": "^0.8.2",
    "globals": "^17.3.0",
    "jiti": "^2.6.1",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.3",
    "rollup": "^4.58.0",
    "rollup-plugin-dts": "^6.3.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-opener": "^0.1.5",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-summary": "^3.0.1",
    "rollup-plugin-swc3": "^0.12.1",
    "rollup-plugin-typescript-paths": "^1.5.0",
    "tsc-alias": "^1.8.16",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "fsevents",
      "unrs-resolver"
    ]
  },
  "browserslist": {
    "production": [
      "defaults",
      ">0.3%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "lottie",
    "animation",
    "svg",
    "vector",
    "player"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">= 12.17.0"
  },
  "funding": {
    "type": "paypal",
    "url": "https://www.paypal.com/donate/?hosted_button_id=E7C7DMN8KSQ6A"
  },
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39"
}
